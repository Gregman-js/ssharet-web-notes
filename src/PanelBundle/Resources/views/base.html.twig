        <script>
          window.addEventListener('DOMContentLoaded', (event) => {
              {% for label, messages in app.flashes %}
                  {% for message in messages %}
                      appShowNotification('{{ label }}','{{ message|raw }}');
                  {% endfor %}
              {% endfor %}
          });

        function appShowNotification(label, notif) {
            color = label;

            $.notify({
              icon: "far fa-bell",
              message: notif

            }, {
              type: color,
              timer: 8000,
              placement: {
                from: 'bottom',
                align: 'right'
              }
            });
          }
        </script>
